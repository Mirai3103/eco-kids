{
  "expo": {
    "name": "EcoKids",
    "slug": "EcoKids",
    "version": "0.1.0",
    "orientation": "default",
    "icon": "./assets/images/ecokids-icon.png",
    "scheme": "ecokids",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "edu.sgu.ecokids"
    },
    "android": {
      "screenOrientation": "unspecified",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ecokids-icon.png",
        "backgroundColor": "#CAFEC3"
      },
      "edgeToEdgeEnabled": true,
      "package": "edu.sgu.ecokids"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/ecokids-icon.png",
          "resizeMode": "cover",
          "backgroundColor": "#CAFEC3"
        }
      ],
      "@react-native-google-signin/google-signin",
      "expo-audio",
      "expo-font",
      "@laffy1309/react-native-voice-input",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "isAccessMediaLocationEnabled": false,
          "granularPermissions": ["audio", "photo"]
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "sgu-nw"
        }
      ],

      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
        
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
    
            "customBuildFlags": [
              "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "a2d533b2-9afa-45dd-89dc-e4c0ee137959"
      }
    },
    "owner": "hoagxxll"
  }
}
